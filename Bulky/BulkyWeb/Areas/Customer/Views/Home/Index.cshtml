@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var group in Model.GroupBy(p => p.Category.Name))
    {
        <h3 class="text-center my-4">@group.Key</h3>
        @foreach (var product in group)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <a asp-action="Details" asp-route-productId="@product.Id" class="d-block text-decoration-none">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" alt="@product.Name" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">
                                    @product.Name
                                </p>
                                <p class="card-title text-warning text-center">
                                    by @product.Supplier
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-uppercase text-center">
                                    R @product.ListPrice
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    }
</div>

